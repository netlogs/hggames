---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Experience the thrill of the Hunger Games through our advanced simulator. Create custom tributes, simulate battles, and witness epic survival stories unfold.",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Orbitron:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="canonical" href={canonicalURL} />
    <title>{title}</title>

    <!-- 添加 Google AdSense 脚本 -->

    <!-- 添加结构化数据 -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "hungergame.cc",
        "url": "https://www.hungergame.cc",
        "sameAs": [
          "https://x.com/liarpzu"
        ]
      }
    </script>
  </head>
  <body class="bg-secondary text-white min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    <div style="display: none;">
      <!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-20F5QKKCX4"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-20F5QKKCX4');
</script>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --accent: 255, 77, 77;
    --accent-light: 255, 128, 128;
    --accent-dark: 204, 61, 61;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: "Inter", system-ui, sans-serif;
    background: #1a1a1a;
  }
</style>
