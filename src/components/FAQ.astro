---

interface Props {
    faqs: {
        question: string;
        answer: string;
    }[];
}

const { faqs } = Astro.props;

---

<section id="faq" class="py-24 bg-secondary-light">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-4">
        Frequently Asked Questions
      </h2>
      <p class="text-white/80 max-w-2xl mx-auto">
        Find answers to common questions about the Hunger Games Simulator.
      </p>
    </div>

    <div class="max-w-3xl mx-auto">
      <div class="space-y-6">
        {faqs.map(faq => (
          <div class="bg-secondary p-6 rounded-xl border border-white/10">
            <h3 class="text-lg font-semibold mb-2">{faq.question}</h3>
            <p class="text-white/70" set:html={faq.answer}></p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>