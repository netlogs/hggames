---
const navItems = [
  { label: 'Home', href: '/' },
  { label: 'Features', href: '#features' },
  { label: 'How It Works', href: '#how-it-works' },
  { label: 'FAQ', href: '#faq' },
];
---

<header class="fixed w-full bg-secondary/90 backdrop-blur-sm z-50">
  <div class="container mx-auto px-4 py-4">
    <nav class="flex items-center justify-between">
      <a href="/" class="text-2xl font-display font-bold text-primary">
        HG Simulator
      </a>
      
      <div class="hidden md:flex items-center gap-8">
        {navItems.map(item => (
          <a 
            href={item.href}
            class="text-white/80 hover:text-primary transition-colors"
          >
            {item.label}
          </a>
        ))}
        <a 
          href="/"
          class="bg-primary hover:bg-primary-dark px-6 py-2 rounded-full font-semibold transition-colors"
          id="start-simulation"
        >
          Start Simulation
        </a>
      </div>

      <button class="md:hidden text-white">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </nav>
  </div>
</header>

<script>
  // 获取按钮元素
  const startButton = document.getElementById('start-simulation');
  
  // 添加点击事件监听器
  startButton?.addEventListener('click', (e) => {
    // 清除localStorage
    localStorage.clear();
  });
</script>